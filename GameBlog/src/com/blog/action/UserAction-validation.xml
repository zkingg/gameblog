<!DOCTYPE validators PUBLIC
"-//OpenSymphony Group//XWork Validator 1.0.2//EN"
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="login">
		<field-validator type="requiredstring">
			<message key="user.inscription.erreur.champ" />
		</field-validator>
		<field-validator type="stringlength">
		    <param name="minLength">3</param>
			<message key="user.inscription.erreur.login" />
		</field-validator>
	</field>
	<field name="mdp">
		<field-validator type="requiredstring">
			<message key="user.inscription.erreur.champ" />
		</field-validator>		
		<field-validator type="stringlength">
		    <param name="minLength">6</param>
			<message key="user.inscription.erreur.mdp" />
		</field-validator>
	</field>
	<field name="mdp2">
		<field-validator type="requiredstring">
			<message key="user.inscription.erreur.champ" />
		</field-validator>
		<field-validator type="stringlength">
		    <param name="minLength">6</param>
			<message key="user.inscription.erreur.mdp" />
		</field-validator>
	</field>
	<field name="email">
		<field-validator type="requiredstring">
			<message key="user.inscription.erreur.champ" />
		</field-validator>
		<field-validator type="email">
			<message key="user.inscription.erreur.email" />
		</field-validator>
	</field>
</validators>